    </div>

    <p>To deploy your <strong>Quiz 2</strong> and <strong>Study Guide</strong>, copy the Google Apps Script code below and paste it into your <a href="https://script.google.com" target="_blank">Google Apps Script Editor</a>.</p>

    <div class="code-block">
        <button class="copy-btn" onclick="copyCode()">Copy Code</button>
        <pre id="codeContent">
/**
 * GENERATOR CODE FOR GOOGLE SERVICES
 * Includes: Ehri's Phases Quiz & Study Doc
 */
function createEducationalPackage() {
  const quizTitle = "Quiz 2: Application of Ehri’s Phases";
  const form = FormApp.create(quizTitle).setIsQuiz(true);
  const doc = DocumentApp.create("Study Guide: Ehri’s Phases");
  
  const questions = [
    {q: "The word 'inactive' is in which phase?", a: "Consolidated", f: "Recognized via morphemes (in-act-ive)."},
    {q: "Why confuse 'house' with 'horse'?", a: "Later Alphabetic mapping", f: "Student is attending to every letter but misplacing internal phonemes."},
    {q: "Decoding 'savana' phonetically?", a: "Early Alphabetic", f: "Standard left-to-right phonetic decoding."}
  ];

  questions.forEach(item => {
    form.addMultipleChoiceItem().setTitle(item.q).setChoices([
        form.createChoice(item.a, true),
        form.createChoice("Other Phase", false)
    ]).setFeedbackForCorrect(FormApp.createFeedback().setText(item.f).build());
    
    doc.getBody().appendParagraph(item.q).setHeading(DocumentApp.ParagraphHeading.HEADING3);
    doc.getBody().appendParagraph("Rationale: " + item.f);
  });

  Logger.log("Form URL: " + form.getEditUrl());
  Logger.log("Doc URL: " + doc.getUrl());
}
        </pre>
    </div>

